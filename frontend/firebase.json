{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ]
  },
  "emulators": {
    "apphosting": {
      "host": "127.0.0.1",
      "port": 6000
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 7000
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 8000
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 9000
    },
    "database": {
      "host": "127.0.0.1",
      "port": 10000
    },
    "pubsub": {
      "host": "127.0.0.1",
      "port": 11000
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199,
      "rules": "storage.rules"
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
